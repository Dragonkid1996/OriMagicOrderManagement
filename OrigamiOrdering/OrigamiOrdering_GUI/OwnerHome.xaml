<Page x:Class="OrigamiOrdering_GUI.OwnerHome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OrigamiOrdering_GUI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OriMagic - Owner Homepage">

    <Grid Margin="10,10,10,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="btnCreate" Content="New Model" HorizontalAlignment="Center" VerticalAlignment="Center" Height="38" Width="100" Click="btnCreate_Click"/>
        <Button x:Name="btnHome" Content="Home" HorizontalAlignment="Center" Margin="0,381,0,0" VerticalAlignment="Top" Height="39" Width="100" Click="btnHome_Click"/>
        <ListView x:Name="lvModels" Grid.Column="1">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Photo" DisplayMemberBinding="{Binding Photo}"/>
                    <GridViewColumn Header="Model Name" DisplayMemberBinding="{Binding Name}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
